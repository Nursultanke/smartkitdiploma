<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.RoomsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:id="@+id/moveId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/moveImageId"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/movingpassive"
                    android:scaleType="centerCrop"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/moveTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="кыймылдоо"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:id="@+id/gasId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/gasImageId"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/gaspassive"
                    android:scaleType="centerCrop"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/gasTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Газ"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:id="@+id/fireId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/fireImageId"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/firepassive"
                    android:scaleType="centerCrop"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/fireTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Орт"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:id="@+id/lampId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/lampImageId"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/lamppassive"
                android:scaleType="centerCrop"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/lampTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Чырак"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:id="@+id/sockedId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/sockedImageId"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/socketpassive"
                android:scaleType="centerCrop"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/sockedTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Розетка"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>