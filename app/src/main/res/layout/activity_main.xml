<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:orientation="horizontal">

                                        <androidx.cardview.widget.CardView
                                            android:layout_margin="10dp"
                                            android:id="@+id/moveMainId"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">
                                                        <ImageView
                                                            android:id="@+id/moveMainImageId"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:src="@drawable/movingpassive"
                                                            android:scaleType="centerCrop"
                                                            android:padding="10dp"/>
                                                        <TextView
                                                            android:id="@+id/moveMainTextId"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="кыймылдоо"
                                                            android:layout_gravity="center"
                                                            android:textSize="16sp"
                                                            android:textColor="#000"
                                                            android:textStyle="bold"
                                                            />
                                                </LinearLayout>
                                        </androidx.cardview.widget.CardView>

                                        <androidx.cardview.widget.CardView
                                            android:layout_margin="10dp"
                                            android:id="@+id/gasMainId"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">
                                                        <ImageView
                                                            android:id="@+id/gasMainImageId"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:src="@drawable/gaspassive"
                                                            android:scaleType="centerCrop"
                                                            android:padding="10dp"/>
                                                        <TextView
                                                            android:id="@+id/gasMainTextId"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="Газ"
                                                            android:layout_gravity="center"
                                                            android:textSize="16sp"
                                                            android:textColor="#000"
                                                            android:textStyle="bold"
                                                            />
                                                </LinearLayout>
                                        </androidx.cardview.widget.CardView>

                                        <androidx.cardview.widget.CardView
                                            android:layout_margin="10dp"
                                            android:id="@+id/tempId"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                        <ImageView
                                                            android:id="@+id/tempImageId"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:padding="10dp"
                                                            android:scaleType="centerCrop"
                                                            android:src="@drawable/temp" />

                                                        <TextView
                                                            android:id="@+id/tempTextId"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="28'С"
                                                            android:layout_gravity="center"
                                                            android:textSize="16dp"
                                                            android:textColor="#000"
                                                            android:textStyle="bold"
                                                            />
                                                </LinearLayout>
                                        </androidx.cardview.widget.CardView>
                                        <androidx.cardview.widget.CardView
                                            android:layout_margin="10dp"
                                            android:id="@+id/fireMainId"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">
                                                        <ImageView
                                                            android:id="@+id/fireMainImageId"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:src="@drawable/firepassive"
                                                            android:scaleType="centerCrop"
                                                            android:padding="10dp"/>
                                                        <TextView
                                                            android:id="@+id/fireMainTextId"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="Орт"
                                                            android:layout_gravity="center"
                                                            android:textSize="16dp"
                                                            android:textColor="#000"
                                                            android:textStyle="bold"
                                                            />
                                                </LinearLayout>
                                        </androidx.cardview.widget.CardView>
                                        <androidx.cardview.widget.CardView
                                            android:layout_margin="10dp"
                                            android:id="@+id/himiId"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">
                                                        <ImageView
                                                            android:id="@+id/himiImageId"
                                                            android:layout_width="100dp"
                                                            android:layout_height="100dp"
                                                            android:src="@drawable/nimi"
                                                            android:scaleType="centerCrop"
                                                            android:padding="10dp"/>
                                                        <TextView
                                                            android:id="@+id/himiTextId"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="Нымдуулук"
                                                            android:layout_gravity="center"
                                                            android:textSize="16dp"
                                                            android:textColor="#000"
                                                            android:textStyle="bold"
                                                            />
                                                </LinearLayout>
                                        </androidx.cardview.widget.CardView>

                                </LinearLayout>


                        </HorizontalScrollView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/room_recyclerView"
                            android:clipToPadding="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:listitem="@layout/room_items"
                            android:padding="10dp"
                            />
                        <Button
                            android:id="@+id/buttonnotificatoin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="someNot"/>
                </LinearLayout>



        </ScrollView>



</LinearLayout>